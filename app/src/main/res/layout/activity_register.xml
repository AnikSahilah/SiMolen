<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#251D3A"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@drawable/simolen"
        android:id="@+id/imageView16"
        android:layout_width="211dp"
        android:layout_height="156dp">
    </ImageView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="@drawable/kotak1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:fontFamily="@font/inter_bold"
            android:text="Buat Akun Baru"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:padding="30dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="start"
                android:fontFamily="@font/inter_bold"
                android:text="Username"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:background="@drawable/kotakfield"
                android:drawableLeft="@drawable/account_profile"
                android:fontFamily="@font/inter"
                android:padding="20dp"
                android:hint="Masukkan username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="start"
                android:fontFamily="@font/inter_bold"
                android:text="Email"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:background="@drawable/kotakfield"
                android:drawableLeft="@drawable/email"
                android:fontFamily="@font/inter"
                android:padding="20dp"
                android:hint="Masukkan email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="start"
                android:fontFamily="@font/inter_bold"
                android:text="Password"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:background="@drawable/kotakfield"
                android:drawableLeft="@drawable/key"
                android:fontFamily="@font/inter"
                android:padding="20dp"
                android:hint="Masukkan password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="start"
                android:fontFamily="@font/inter_bold"
                android:text="Konfirmasi Password"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:background="@drawable/kotakfield"
                android:drawableLeft="@drawable/key"
                android:fontFamily="@font/inter"
                android:padding="20dp"
                android:hint="Masukkan password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>
        <Button
            android:layout_width="330dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:background="@drawable/button_register_bg"
            android:fontFamily="@font/inter_semibold"
            android:paddingBottom="12dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textSize="18dp">
        </Button>
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:fontFamily="@font/inter_light"
            android:gravity="center"
            android:text="Sudah memiliki akun?"
            android:textColor="#000000">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:text="Log in">
        </TextView>
    </LinearLayout>
</LinearLayout>